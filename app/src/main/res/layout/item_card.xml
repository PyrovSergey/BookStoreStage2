<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/card_book_title"
            android:layout_below="@+id/card_book_title"
            android:layout_marginStart="11dp"
            tools:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/card_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="18sp"
            tools:text="Title of book" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_image"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/card_image"
            android:text="@string/total_left"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/total_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/total"
            android:layout_alignBottom="@+id/total"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/total"
            android:textSize="20sp"
            tools:text="12" />

        <TextView
            android:id="@+id/card_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_button_sale"
            android:layout_alignEnd="@+id/total_left"
            android:textSize="20sp"
            tools:text="10$" />

        <ImageButton
            android:id="@+id/card_button_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/total"
            android:layout_alignTop="@+id/card_book_price"
            android:padding="6dp"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_settings_white_24dp" />

        <ImageButton
            android:id="@+id/card_button_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/card_book_title"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:background="@drawable/roundedbutton"
            android:padding="10dp"
            android:src="@drawable/ic_shopping_cart_white_48dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>